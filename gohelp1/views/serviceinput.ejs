<section>
  <div class="header-banner">
      <h1>Service Provider Application Form</h1>
      
  </div>

  <form action="/gohelp/serviceproviders" method="POST" enctype="multipart/form-data">
      <h2>Personal Information</h2>
      <% if (error_msg.length > 0) { %>
        <div style="color: red;"><%= error_msg %></div>
    <% } %>
      <div class="form-group">
          <label for="fullname">Full Name:</label>
          <input type="text" id="fullname" name="fullname" required>
      </div>
      <div class="form-group">
          <label for="contact">Contact Number:</label>
          <input type="tel" id="contact" name="contactnumber" required>
      </div>
      <div class="form-group">
          <label for="email">Email Address:(Same As Login Email)</label>
          <input type="email" id="email" name="emailaddress" required>
      </div>
      <div class="form-group">
          <label for="address">Residential City:</label>
          <textarea id="address" name="city" required></textarea>
      </div>

      <h2>Professional Details</h2>
      <div class="form-group">
          <label for="service">Service Offered:</label>
          <select id="service" name="category" required>
              <option value="">Select a service</option>
              <option value="ScrapCollection">ScrapCollection</option>
    <option value="BabySitting">BabySitting</option>
    <option value="HouseCleaning">HouseCleaning</option>
    <option value="WaterTankCleaning">WaterTankCleaning</option>
    <option value="ElderlyCare">ElderlyCare</option>
    <option value="Electrical">Electrical</option>
    <option value="Plumbing">Plumbing</option>
    <option value="Painting">Painting</option>
    <option value="ApplianceRepair">ApplianceRepair</option>
    <option value="HomeRenovation">HomeRenovation</option>
    <option value="HomeSecuritySystem">HomeSecuritySystem</option>
    <option value="GuardService">GaurdService</option>
    <option value="CateringService">CateringService</option>

    
          </select>
      </div>
      <div class="form-group">
          <label for="experience">Experience (in years):</label>
          <input type="text" id="experience" name="experience" required>
      </div>
      <div class="form-group">
          <label for="certifications">Certifications (if any):</label>
          <input type="text" id="certifications" name="certifications">
      </div>
      <div class="form-group">
          <label for="portfolio">Portfolio/Profile Link:</label>
          <input type="text" id="portfolio" name="portfolio">
      </div>

      <h2>Availability</h2>
      <div class="form-group">
          <label for="workhours">Work Hours/Days:</label>
          <input type="text" id="workhours" name="workhour" required>
      </div>
      <div class="form-group">
          <label for="locations">Preferred Locations:</label>
          <input type="text" id="locations" name="locations" required>
      </div>

      <h2>Verification</h2>
      <div class="form-group">
          <!-- <label for="photo">Upload your Photo:</label>
          <div class="file-upload"> -->
              <!-- <input type="text" id="photo-text" readonly placeholder="No file chosen">
              <button type="button" class="upload-btn" onclick="document.getElementById('photo').click()">Choose File</button> -->
              <!-- <input type="file" id="photo" name="uploadimage" style="display: none" required> -->

              <input type="text" placeholder="enter adharcard Number" name="adharcard">
  <br><br>
  <input type="file" name="uploadimage">
  <br>
          </div>
      </div>
      <div class="form-group">
        
          </div>
      </div>
      <div class="form-group">
          <label for="phone">Phone Number:</label>
          <div class="file-upload">
              <input type="tel" id="phone" name="phone" required>
              <button type="button" class="verify-btn">Verify OTP</button>
          </div>
      </div>
      <div class="form-group">
          <label for="otp">O.T.P:</label>
          <input type="text" id="otp" name="otp" maxlength="6">
      </div>

      <div class="checkbox-group">
          <label class="checkbox-label">
              <input type="checkbox" name="background-check" required>
              I consent to a background verification process
          </label>
          <label class="checkbox-label">
              <input type="checkbox" name="terms" required>
              I agree to the terms and conditions of the platform
          </label>
      </div>

      <button type="submit" class="submit-btn">Submit Application</button>
  </form>
</section>



</body>
</html>