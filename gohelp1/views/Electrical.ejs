    <% if(provide.category == "BabySitting"){ %>
      <img src="<%= provide.uploadimage.url %>" alt="">
    <p><%= provide.fullname %></p>
    <p><%= provide.city %></p>
    <p><%= provide.contactnumber %></p>
    <p><%= provide.experience %></p>
    <p><%= provide.category %></p>
    <%}%>
   <% } %> -->

   <div class="header">
    <h1>BabySittingService Providers</h1>
</div>


<div class="providers-grid">
  <% for(let provide of provides){ %>
      <% if(provide.category == "Electrical"){ %>
          <div class="provider-card">
              <img class="profile-image" src="<%= provide.uploadimage.url %>" alt="Provider Profile">
              <h2 class="provider-name"><%= provide.fullname %></h2>
              <p class="provider-city"><%= provide.city %></p>
              <ul class="materials-list">
                  <% if(provide.experience) { %>
                      <li>Experience: <%= provide.experience %></li>
                  <% } %>
                  <% if(provide.category) { %>
                      <li>Category: <%= provide.category %></li>
                  <% } %>
              </ul>
              <div class="contact-buttons">
                  <!-- <a href="tel:<%= provide.contactnumber %>" class="contact-btn">Phone</a>
                  <a href="mailto:<%= provide.emailaddress %>" class="contact-btn">Email</a> -->
                  <a href="<%=provide.category%>/<%=provide.emailaddress%>" class="contact-btn">Request Service</a>
              </div>
          </div>
      <% } %>
  <% } %>
</div>
</body>
</html>